<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="mass_email_customer">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to send an email to the selected customers?</message>
                        <title translate="true">Email to Customers</title>
                    </confirm>
                    <url path="massemailcustomers/email/massSend"/>
                    <type>mass_email_customer</type>
                    <label translate="true">Email to Customers</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
